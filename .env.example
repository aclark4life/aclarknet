# Django Settings
DJANGO_SETTINGS_MODULE=aclarknet.settings.dev
SECRET_KEY=your-secret-key-here

# Database
MONGODB_URI=mongodb://localhost:27017

# GitHub OAuth (optional - can also be configured via Django admin)
# Get these from: https://github.com/settings/developers
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_SECRET=your-github-client-secret

# GitHub Username Whitelist (optional - comma-separated list of allowed GitHub usernames)
# If not set, all GitHub users can login. If set, only listed usernames can login.
# GITHUB_USERNAME_WHITELIST=username1,username2,username3

# Email (optional - for production)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password
# EMAIL_USE_TLS=True

# Production Settings (optional - for production)
# DEBUG=False
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
