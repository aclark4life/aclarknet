# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production
DJANGO_ALLOWED_HOSTS=aclark.net,www.aclark.net,m.aclark.net
DJANGO_CSRF_TRUSTED_ORIGINS=https://aclark.net,https://www.aclark.net,https://m.aclark.net
DJANGO_SETTINGS_MODULE=aclarknet.settings.production

# Static and Media Files
DJANGO_STATIC_ROOT=/srv/aclarknet/static
DJANGO_MEDIA_ROOT=/srv/aclarknet/media

# Database Configuration (MongoDB)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=aclarknet

# Wagtail Configuration
WAGTAIL_BASE_URL=https://aclark.net

# Email Configuration
# Set USE_SES=True to use AWS SES, or False to use standard SMTP
USE_SES=True

# AWS SES Configuration (when USE_SES=True)
# IMPORTANT: If running on EC2/ECS/Lambda, use IAM role (recommended)
# - Attach an IAM role with SES permissions to your EC2 instance
# - Leave AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY empty/commented out
# - boto3 will automatically use the instance role credentials
#
# Only set AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY if:
# - Running outside AWS infrastructure, OR
# - You need to use specific IAM user credentials instead of instance role

# AWS SES Region (required)
AWS_SES_REGION_NAME=us-east-1

# AWS Credentials (optional - only if NOT using IAM role)
# Leave these commented out to use IAM role (recommended for EC2/ECS/Lambda)
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Optional: Configuration set for tracking opens/clicks
AWS_SES_CONFIGURATION_SET=

# Use SES v2 API (recommended, set to False for v1)
USE_SES_V2=True

# Standard SMTP Configuration (when USE_SES=False)
EMAIL_HOST=localhost
EMAIL_PORT=25
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Logging
DJANGO_LOG_FILE=/srv/aclarknet/logs/django.log

# Google reCAPTCHA v3 Configuration
# Get your keys from https://www.google.com/recaptcha/admin
# Make sure to select reCAPTCHA v3 when creating your keys
RECAPTCHA_PUBLIC_KEY=your-recaptcha-v3-public-key-here
RECAPTCHA_PRIVATE_KEY=your-recaptcha-v3-private-key-here
# Score threshold (0.0 to 1.0, where 1.0 is very likely a human, default: 0.5)
RECAPTCHA_REQUIRED_SCORE=0.5

# Stripe Payment Configuration
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key-here
STRIPE_SECRET_KEY=sk_test_your-secret-key-here
# Webhook secret from https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here
